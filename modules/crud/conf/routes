# Routes for the CRUD module
# ~~~~~~~~~~~

GET			/												CRUD.index
#{crud.types}
GET			/${type.controllerName}							${type.controllerName}.list
GET			/${type.controllerName}/new						${type.controllerName}.blank
GET			/${type.controllerName}/{<\d+>id}				${type.controllerName}.show
GET			/${type.controllerName}/{<\d+>id}/{field}		${type.controllerName}.attachment
GET			/${type.controllerName}/{<\d+>id}/edit			${type.controllerName}.edit
POST		/${type.controllerName}							${type.controllerName}.create
PUT			/${type.controllerName}/{<\d+>id}				${type.controllerName}.save
DELETE		/${type.controllerName}/{<\d+>id}				${type.controllerName}.delete
#{/crud.types}
